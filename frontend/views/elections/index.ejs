<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>All Elections</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      html,
      body {
        height: 100%;
        margin: 0;
        background-color: #f8f9fa;
      }

      .main-wrapper {
        min-height: 100%;
        display: flex;
        flex-direction: column;
      }

      .content {
        flex: 1;
        padding: 2rem 1rem;
      }

      .badge-upcoming {
        background-color: #6c757d;
      }

      .badge-ongoing {
        background-color: #0d6efd;
      }

      .badge-completed {
        background-color: #198754;
      }

      .badge-canceled {
        background-color: #dc3545;
      }
    </style>
  </head>

  <body>
    <div class="main-wrapper">
      <%- include('../partials/navbar') %>

      <div class="content container">
        <div class="card shadow-sm">
          <div class="card-body">
            <h3 class="mb-4 text-center">All Elections</h3>

            <% if (elections.length === 0) { %>
            <div class="alert alert-warning text-center">
              No elections available yet.
            </div>
            <% } else { %>
            <div class="table-responsive">
              <table class="table table-bordered table-striped align-middle">
                <thead class="table-dark">
                  <tr>
                    <th>#</th>
                    <th>Type</th>
                    <th>Status</th>
                    <th>Start</th>
                    <th>End</th>
                    <th>Candidates</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% elections.forEach((election, index) => { let statusText =
                  election.electionStatus; const currentDate = new Date(); if
                  (statusText === 'ongoing' && new Date(election.endDate) <
                  currentDate) { statusText = 'completed'; } const statusClasses
                  = { upcoming: 'badge-upcoming', ongoing: 'badge-ongoing',
                  completed: 'badge-completed', canceled: 'badge-canceled' };
                  const statusClass = statusClasses[statusText] ||
                  'bg-secondary'; %>
                  <tr>
                    <td>Election #<%= election.electionNumber %></td>
                    <td><%= election.type.toUpperCase() %></td>
                    <td>
                      <span class="badge <%= statusClass %>">
                        <%= statusText.toUpperCase() %>
                      </span>
                    </td>
                    <td>
                      <%= new Date(election.startDate).toLocaleString() %>
                    </td>
                    <td><%= new Date(election.endDate).toLocaleString() %></td>
                    <td><%= election.candidates.length %></td>
                    <td>
                      <a
                        href="/api/elections/<%= election._id %>"
                        class="btn btn-sm btn-outline-primary"
                      >
                        View
                      </a>
                    </td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
            <% } %>
          </div>
        </div>
      </div>

      <%- include('../partials/footer') %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
