<%- include('partials/header') %> <%- include('partials/navbar') %>

<div class="content container py-5">
  <div class="dashboard-container text-center">
    <!-- Admin Profile Hero -->
    <div class="profile-hero mb-5">
      <div class="profile-image-container mb-4">
        <img
          src="https://cdn-icons-png.flaticon.com/512/149/149071.png"
          alt="Admin"
          class="profile-img-large rounded-circle"
        />
      </div>

      <h1 class="welcome-heading">Admin: <%= user.email %></h1>

      <!-- Admin Info Card -->
      <div class="detail-card mt-4 shadow fancy-detail">
        <div class="detail-row">
          <div class="detail-label">
            <i class="fas fa-user-shield icon-highlight me-2"></i> Role:
          </div>
          <div class="detail-value">System Administrator</div>
        </div>

        <div class="detail-row">
          <div class="detail-label">
            <i class="fas fa-envelope me-2"></i> Email Address:
          </div>
          <div class="detail-value"><%= user.email %></div>
        </div>

        <div class="detail-row">
          <div class="detail-label">
            <i class="fas fa-calendar-check me-2"></i> Logged In Since:
          </div>
          <div class="detail-value">
            <%= new Date(user.createdAt || Date.now()).toLocaleDateString() %>
          </div>
        </div>
      </div>
    </div>

    <!-- Admin Dashboard Actions -->
    <div class="dashboard-actions mt-5">
      <a href="/api/candidates" class="btn btn-action btn-primary">
        <i class="fas fa-users"></i> View All Candidates
      </a>
      <a href="/api/elections" class="btn btn-action btn-info">
        <i class="fas fa-vote-yea"></i> View All Elections
      </a>
      <a href="/api/users" class="btn btn-action btn-warning">
        <i class="fas fa-user-cog"></i> Manage Users
      </a>
      <a href="/api/insights" class="btn btn-action btn-dark">
        <i class="fas fa-brain"></i> AI Insights
      </a>
      <a href="/api/settings" class="btn btn-action btn-outline-secondary">
        <i class="fas fa-cogs"></i> System Settings
      </a>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
