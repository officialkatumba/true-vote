<%- include('partials/header') %> <%- include('partials/navbar') %>

<div class="content container py-5">
  <div class="form-container mx-auto" style="max-width: 500px">
    <h2 class="text-center mb-4">Edit Profile</h2>

    <form action="/api/candidates/edit" method="POST">
      <div class="mb-3">
        <label for="name" class="form-label">Full Name *</label>
        <input
          type="text"
          name="name"
          id="name"
          value="<%= candidate.name %>"
          class="form-control"
          required
        />
      </div>

      <div class="mb-3">
        <label for="bio" class="form-label">Short Bio *</label>
        <textarea name="bio" id="bio" rows="3" class="form-control" required>
<%= candidate.bio %></textarea
        >
      </div>

      <div class="mb-3">
        <label for="party" class="form-label">Political Party</label>
        <input
          type="text"
          name="party"
          id="party"
          value="<%= candidate.party %>"
          class="form-control"
        />
      </div>

      <div class="mb-3">
        <label for="profileImage" class="form-label">Profile Image URL</label>
        <input
          type="url"
          name="profileImage"
          id="profileImage"
          value="<%= candidate.profileImage %>"
          class="form-control"
        />
      </div>

      <div class="mb-3">
        <label for="partySymbol" class="form-label"
          >Party Symbol Image URL</label
        >
        <input
          type="url"
          name="partySymbol"
          id="partySymbol"
          value="<%= candidate.partySymbol %>"
          class="form-control"
        />
      </div>

      <button type="submit" class="btn btn-primary w-100">
        Update Profile
      </button>
    </form>
  </div>
</div>

<%- include('partials/footer') %>
